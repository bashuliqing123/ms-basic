<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.mingsoft.basic.dao.IPeopleDao">
	
	<resultMap id="resultMap" type="net.mingsoft.basic.entity.PeopleEntity">
		<id column="bp_id" property="bpId" /><!-- -->
		<result column="bp_basic_id" property="bpBasicId" /><!--信息编号 -->
		<result column="bp_people_id" property="bpPeopleId" /><!--用户编号 -->
		<result column="bp_datetime" property="bpDatetime" /><!--创建时间 -->
	</resultMap>
	
	<!--保存-->	
	<insert id="saveEntity" useGeneratedKeys="true" keyProperty="bpId"
		parameterType="net.mingsoft.basic.entity.PeopleEntity" >
		insert into basic_people
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bpBasicId != null">bp_basic_id,</if>
			<if test="bpPeopleId != null">bp_people_id,</if>
			<if test="bpDatetime != null">bp_datetime,</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bpBasicId != null">#{bpBasicId},</if>
			<if test="bpPeopleId != null">#{bpPeopleId},</if>
			<if test="bpDatetime != null">#{bpDatetime},</if>
		</trim>
	</insert>
	
	<!--更新-->	
	<update id="updateEntity" parameterType="net.mingsoft.basic.entity.PeopleEntity">
		update basic_people
		<set>
			<if test="bpBasicId != null">bp_basic_id=#{bpBasicId},</if>			
			<if test="bpPeopleId != null">bp_people_id=#{bpPeopleId},</if>			
			<if test="bpDatetime != null">bp_datetime=#{bpDatetime},</if>			
		</set>
		where bp_id = #{bpId}
	</update>
	
	<!--根据id获取-->	
	<select id="getEntity" resultMap="resultMap" parameterType="int">
		select * from basic_people where bp_id=#{bpId}
	</select>
	
	<!--根据实体获取-->
	<select id="getByEntity" resultMap="resultMap" parameterType="net.mingsoft.basic.entity.PeopleEntity">
		select * from basic_people 
		<where>
			<if test="bpBasicId != null"> and bp_basic_id=#{bpBasicId} </if>				
			<if test="bpPeopleId != null"> and bp_people_id=#{bpPeopleId} </if>				
			<if test="bpDatetime != null"> and bp_datetime=#{bpDatetime} </if>				
		</where>
		limit 0,1
	</select>	
	
	
	<!--删除-->	
	<delete id="deleteEntity" parameterType="int">
		delete from basic_people  where bp_id=#{bpId}
	</delete>	
	
	<!--批量删除-->	
	<delete id="delete" >
		delete from basic_people
		<where>
			 bp_id  in <foreach collection="ids" item="item" index="index" 
			open="(" separator="," close=")">#{item}</foreach>
		</where>
	</delete>
	<!--查询全部-->	
	<select id="queryAll" resultMap="resultMap">
		select * from basic_people order by bp_id desc
	</select>
	<!--条件查询-->	
	<select id="query" resultMap="resultMap">
		select * from basic_people  
		<where>
				<if test="bpBasicId != null"> and bp_basic_id=#{bpBasicId} </if>				
				<if test="bpPeopleId != null"> and bp_people_id=#{bpPeopleId} </if>				
				<if test="bpDatetime != null"> and bp_datetime=#{bpDatetime} </if>				
		</where>		
		order by bp_id desc
	</select>
	
</mapper>